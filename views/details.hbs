<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{post.title}}</h2>
            <h3>Author: {{post.author.username}}</h3>
            <h3>Painting technique: {{post.paintingTechnique}}</h3>
            <h3>Certificate of authenticity: {{post.certificate}}</h3>
            {{#if post.hasUser}}
            <div class="buttons">
                {{#if post.isAuthor}}
                <a href="/edit/{{post._id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{post._id}}" class="btn-delete">Delete</a>
                {{else}}
                    {{#if post.isShared}}
                    <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                    <a href="/share/{{post._id}}" class="btn-share">Share publication</a>
                    {{/if}}
                {{/if}}
            </div>
            {{/if}}

        </article>

        <article class="details-card-image">
            <img src="/static/img/img-5.jpg" alt="art-image2">
        </article>

    </article>
</section>